{
  "manifest_version": 3,
  "name": "Gemini Paraphrase Assistant",
  "description": "Sends text to Gemini for paraphrasing and grammar checking",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ]
}
